<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoConsolas.consolas"
             Title="Consolas"
             IconImageSource="img1.png">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label > Hola Mundo</Label>
            <CollectionView ItemsSource="{ Binding listaConsolas}"
                            AbsoluteLayout.LayoutBounds="0,0,1,1"
                            AbsoluteLayout.LayoutFlags="All">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10"
                               BorderColor="Gray"
                               HasShadow="True"
                               Padding="10"
                               BackgroundColor="White"
                               >
                            <StackLayout>
                                <Label Text="{Binding nombre}"
                                       FontSize="Title"
                                       FontAttributes="Bold"
                                       Margin="0,10,0,5"
                                       TextColor="Black"/>
                                <Label Text="{Binding fabricante}"
                                       FontSize="Subtitle"
                                       Margin="0,0,0,5"
                                       TextColor="Black"/>
                                <Label Text="{Binding fechalanzamiento}"
                                       FontSize="Subtitle"
                                       Margin="0,0,0,5"
                                       TextColor="Black"/>
                                <Image
                                    Source="{Binding enlaceimagen}"
                                    />
                                <StackLayout Orientation="Horizontal"
                                    HorizontalOptions="CenterAndExpand">
                                    <Button Text="Ver Juegos"
                                       BackgroundColor="#2196F3"
                                       TextColor="White"
                                       CornerRadius="5"
                                       Margin="0,0,10,0"
                                       HorizontalOptions="CenterAndExpand"/>
                                    <Button Text="Registrar Juegos"
                                       BackgroundColor="#FF5733"
                                       TextColor="White"
                                       CornerRadius="5"
                                       HorizontalOptions="CenterAndExpand"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!-- Botón flotante para agregar -->
            <ImageButton Source="plus.png"
             BackgroundColor="#2196F3"
             WidthRequest="50"
             HeightRequest="50"
             CornerRadius="25"
                Margin="15"
             AbsoluteLayout.LayoutBounds="1,1,-1,-1"
             AbsoluteLayout.LayoutFlags="PositionProportional"
             Aspect="AspectFit"
             HorizontalOptions="Center"
             VerticalOptions="Center"/>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
