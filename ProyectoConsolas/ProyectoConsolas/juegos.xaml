<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoConsolas.juegos"
             Title="Juegos"
             IconImageSource="img2.png">
    <ContentPage.Content>
        <StackLayout Padding="20">
            
            <!-- formulario -->
            <Label Text="VIDEOJUEGOS"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />
            <Entry Placeholder="Título"
                   Margin="0,0,0,10" />
            <Entry Placeholder="Fecha de lanzamiento"
                   Margin="0,0,0,10" />

            <!-- selectar consolas -->
            <Label Text="Consola relacionada:"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />
            <Picker x:Name="consolaPicker"
                    Title="Seleccionar Consola"
                    Margin="0,0,0,20">

            </Picker>

            <Button Text="Registrar Videojuego"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="5"
                    Margin="0,0,0,20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
